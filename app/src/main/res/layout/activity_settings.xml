<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.SettingsActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/settings_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@color/light_blue_primary_night"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <LinearLayout
        android:id="@+id/settings_table_user_email_linear_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/constraint_layout_round_bg"
        android:layout_marginTop="10dp"

        app:layout_constraintTop_toBottomOf="@id/settings_toolbar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <TextView
            android:id="@+id/settings_user_email_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"

            android:layout_gravity="center"
            android:gravity="center"
            android:text="User Email"
            android:textSize="20sp"
            android:fontFamily="@font/inter"/>

        <TextView
            android:id="@+id/settings_current_user_email_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"

            android:layout_gravity="center"
            android:gravity="center"
            android:text="User Email"
            android:textSize="30sp"
            android:fontFamily="@font/inter"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>